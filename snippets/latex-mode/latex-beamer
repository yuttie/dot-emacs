# -*- mode: snippet -*-
# name: latex-beamer
# key: latex-beamer
# --
\documentclass[12pt]{beamer}

% Theme
\setbeamertemplate{background}{\includegraphics[width=\paperwidth]{background}}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}[frame number]
\setbeamercolor{page number in head/foot}{fg=black}
\setbeamerfont{title}{size=\LARGE,series=\bfseries}
\setbeamercolor{title}{fg=cyan!80!black}
\setbeamertemplate{frametitle}{\begin{centering}\insertframetitle\par\end{centering}}
\setbeamerfont{frametitle}{size=\LARGE,series=\bfseries}
\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{item}{fg=lime!80!black}
\setbeamercolor{alerted text}{fg=magenta}
\setbeamercolor{example text}{fg=lime!80!black}
\setbeamercolor{block title example}{fg=lime!50!black,bg=lime!30!white}
\setbeamercolor{block body example}{fg=black,bg=lime!30!white}
\setbeamertemplate{block example begin}{%
  \begin{center}%
    {\usebeamercolor[fg]{block title example}\insertblocktitle}\linebreak%
    \begin{beamercolorbox}[wd=0.8\textwidth]{block body example}%
}
\setbeamertemplate{block example end}{%
    \end{beamercolorbox}%
  \end{center}%
}

